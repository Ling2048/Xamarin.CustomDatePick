<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MyDataPick.Views;assembly=MyDataPick"
             x:Class="MyDataPick.MainPage">

    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" iOS="0, 20, 0, 0" />
    </ContentPage.Padding>
    
    <StackLayout Orientation="Vertical">
        <StackLayout Margin="10" WidthRequest="400" BackgroundColor="YellowGreen" HorizontalOptions="Center">
            <!--<Label Text="Welcome to Xamarin Forms!"  />-->
            <local:MyDataPick x:Name="dp" BackgroundColor="YellowGreen"  HeightRequest="400" />
        </StackLayout>
    </StackLayout>


</ContentPage>